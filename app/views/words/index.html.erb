<div class="container">
  <h1><%= t "word_list" %></h1>
  <%= render "find_form" %>
  <%= will_paginate %>
  <table class="table table-hover">
    <tr class="success">
      <th><%= t "word" %></th>
      <th><%= t "mean" %></th>
    </tr>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.content %></td>
        <td>
          <% word.meanings.each do |meaning| %>
            <%= meaning.content if meaning.is_correct %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>
